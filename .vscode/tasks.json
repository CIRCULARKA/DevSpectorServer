{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Server/InvMan.Server.UI/InvMan.Server.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/Server/InvMan.Server.UI/InvMan.Server.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build & Run Server",
			"dependsOn": [
				"Build Server",
				"Run Server"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Desktop",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Desktop/InvMan.Desktop.UI/InvMan.Desktop.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Watch Server Tests",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"-q",
				"--project",
				"${workspaceFolder}/Server",
				"test",
				"${workspaceFolder}/Tests/Tests.Server/Tests.Server.csproj"
			],
			"runOptions": {
				"instanceLimit": 1,
				"runOn": "folderOpen"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Watch Common Tests",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"watch",
				"-q",
				"--project",
				"${workspaceFolder}/Common",
				"test",
				"${workspaceFolder}/Tests/Tests.Common/Tests.Common.csproj"
			],
			"runOptions": {
				"instanceLimit": 1,
				"runOn": "folderOpen"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": []
		},
		{
			"label": "Watch Server",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"-q",
				"--project",
				"${workspaceFolder}/Server/InvMan.Server.UI",
				"run"
			],
			"runOptions": {
				"instanceLimit": 1,
				"runOn": "folderOpen"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}
