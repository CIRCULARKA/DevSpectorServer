{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Server",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Build Server",
			"program": "${workspaceFolder}/Server/InvMan.Server.UI/bin/Debug/net5.0/InvMan.Server.UI.dll",
			"args": [],
			"cwd": "${workspaceFolder}/Server/InvMan.Server.UI",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)",
				"uriFormat": "%s/api/devices"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"sourceFileMap": {
				"/Views": "${workspaceFolder}/Views"
			},
		},
		{
			"name": "Debug Desktop",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Build Desktop",
			"program": "${workspaceFolder}/Desktop/InvMan.Desktop.UI/bin/Debug/net5.0-windows/InvMan.Desktop.UI.dll",
			"args": [],
			"cwd": "${workspaceFolder}/Desktop/InvMan.Desktop.UI",
			"stopAtEntry": false
		}
	]
}
