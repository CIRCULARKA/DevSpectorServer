<Window x:Class="InvMan.Desktop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:InvMan.Desktop.UI"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ListView x:Name="devices">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Path=NetworkName}" FontSize="20" />
                        <TextBlock Text="{Binding Path=InventoryNumber}" FontSize="15" />
                        <TextBlock Text="{Binding Path=Type}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Load Devices" Height="40" Click="LoadDevicesAsync" />
    </StackPanel>
</Window>
