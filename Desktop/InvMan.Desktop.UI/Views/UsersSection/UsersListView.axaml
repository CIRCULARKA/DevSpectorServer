<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
    x:Class="InvMan.Desktop.UI.Views.UsersListView" >
    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <ListBox BorderThickness="0" Height="{Binding #base.Height}"
            Items="{Binding Users}" SelectedItem="{Binding SelectedUser}"
            IsVisible="{Binding AreThereUsers}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="*" ColumnDefinitions="Auto,*">
                        <ContentControl Content="{StaticResource singleDeviceIcon}" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding NetworkName}" Foreground="White" FontSize="20" />
                            <TextBlock Text="{Binding Type}" Foreground="Gray" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Panel Height="{Binding #base.Height}" IsVisible="{Binding !AreThereAppliances}">
            <progRing:ProgressRing IsVisible="{Binding !AreAppliancesLoaded}"
                IsActive="{Binding !AreAppliancesLoaded}" Foreground="{DynamicResource PrimaryHueLightBrush}" Width="50" Height="50" />
            <TextBlock Text="{Binding NoAppliancesMessage}"
                IsVisible="{Binding AreAppliancesLoaded}"
                Margin="3 0 3 0"
                TextWrapping="Wrap" TextAlignment="Center"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                FontSize="26" Foreground="Gray" />
        </Panel>
    </Grid>
</UserControl>
