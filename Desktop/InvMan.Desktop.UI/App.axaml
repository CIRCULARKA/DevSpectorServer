    <Application.Styles>
        <!--
            MY
        -->

        <Style Selector="TextBlock.main">
            <Setter Property="Margin" Value="0 0 0 8" />
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style Selector="TextBlock.note">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="Gray" />
        </Style>
        <Style Selector="TextBlock.Headline5">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryHueLightBrush}" />
        </Style>

        <StyleInclude Source="avares://InvMan.Desktop.Common/Styles/ModernMenuStyle.axaml" />
        <StyleInclude Source="avares://InvMan.Desktop.Common/Styles/ModernMenuItemStyle.axaml" />

        <!--
            !MY
