<Styles xmlns="https://github.com/avaloniaui"
    xmlns:shared="using:InvMan.Desktop.UI.Views.Shared"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="shared|ModernMenu">
        <Setter Property="Template">
            <ControlTemplate TargetType="shared:ModernMenu">
                <Grid RowDefinitions="*" ColumnDefinitions="250,*">
                    <StackPanel Margin="0 0 15 0">
                        <Button Content="{TemplateBinding Title}" />
                    </StackPanel>
                    <ContentControl Content="{TemplateBinding CurrentContent}"
                        Grid.Row="0" Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
