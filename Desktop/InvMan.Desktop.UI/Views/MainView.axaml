<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:InvMan.Desktop.UI.ViewModels"
        xmlns:res="using:InvMan.Desktop.UI.Assets"
		xmlns:aura="using:Aura.UI.Controls"
		xmlns:auranav="using:Aura.UI.Controls.Navigation"
        xmlns:auraxaml="using:Aura.UI.Xaml"
        xmlns:materialstyles="clr-namespace:Material.Styles;assembly=Material.Styles"
        xmlns:assist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="900" Height="900" MinWidth="1200"
        x:Class="InvMan.Desktop.UI.Views.MainView"
        Icon="/Assets/avalonia-logo.ico"
        Title="Панель управления">
        <Window.Styles>
			<Style Selector="TextBlock.note">
                <Setter Property="Margin" Value="0 5 0 0" />
				<Setter Property="FontSize" Value="12" />
				<Setter Property="Foreground" Value="Gray" />
			</Style>
            <Style Selector="TextBlock.Headline5">
                <Setter Property="Foreground" Value="{DynamicResource SecondaryHueLightBrush}" />
            </Style>
            <Style Selector="materialstyles|Card">
                <Setter Property="assist:ShadowAssist.ShadowDepth" Value="9" />
            </Style>
        </Window.Styles>
        <Border Padding="15">
            <Grid RowDefinitions="Auto,*" ColumnDefinitions="2*,4*">
                <materialstyles:Card Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                    Margin="0 0 15 0">
                    <aura:GroupBox>
                        <aura:GroupBox.Header>
                            <TextBlock Classes="Headline5" Text="Устройства" />
                        </aura:GroupBox.Header>
                        <UserControl Content="{Binding DevicesList}" />
                    </aura:GroupBox>
                </materialstyles:Card>
                <materialstyles:Card Grid.Row="0" Grid.Column="1"
                    Margin="0 0 0 15">
                    <aura:GroupBox>
                        <aura:GroupBox.Header>
                            <TextBlock Classes="Headline5" Text="Поиск" />
                        </aura:GroupBox.Header>
                        <StackPanel>
                            <UserControl Content="{Binding Search}" />
                        </StackPanel>
                    </aura:GroupBox>
                </materialstyles:Card>
                <materialstyles:Card Grid.Row="1" Grid.Column="1">
                    <aura:GroupBox>
                        <aura:GroupBox.Header>
                            <TextBlock Classes="Headline5" Text="Информация" />
                        </aura:GroupBox.Header>
                        <UserControl Content="{Binding DeviceInfo}" />
                    </aura:GroupBox>
                </materialstyles:Card>
            </Grid>
        </Border>
