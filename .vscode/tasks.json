{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Server/InvMan.Server.UI/InvMan.Server.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run Server",
			"command": "dotnet",
			"type": "process",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/Server/InvMan.Server.UI/InvMan.Server.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build & Run Server",
			"dependsOn": [
				"Build Server",
				"Run Server"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build Desktop",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Desktop/InvMan.Desktop.UI/InvMan.Desktop.UI.csproj",
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Stage current file",
			"command": "git",
			"type": "process",
			"args": [
				"add",
				"${file}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
