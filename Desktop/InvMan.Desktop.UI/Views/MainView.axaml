<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:InvMan.Desktop.UI.ViewModels"
        xmlns:res="using:InvMan.Desktop.UI.Assets"
        xmlns:views="using:InvMan.Desktop.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800"
        SizeToContent="Height"
        x:Class="InvMan.Desktop.UI.Views.MainView"
        Icon="/Assets/avalonia-logo.ico"
        Title="Панель управления">
    <StackPanel>
        <Grid RowDefinitions="*,*" ColumnDefinitions="*, *">
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                HorizontalAlignment="Center" Margin="10"
                Classes="h1"
                Foreground="LightGray" Text="Устройства" />
            <views:DevicesList Grid.Row="1" Grid.Column="0" Content="{Binding DevicesList}" />
            <views:DeviceInfo Grid.Row="1" Grid.Column="1" Content="{Binding DeviceInfo}" />
        </Grid>
    </StackPanel>
</Window>
