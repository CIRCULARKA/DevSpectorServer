<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:InvMan.Desktop.UI.ViewModels"
        xmlns:res="using:InvMan.Desktop.UI.Assets"
        xmlns:views="using:InvMan.Desktop.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="800"
        SizeToContent="Height"
        x:Class="InvMan.Desktop.UI.Views.MainView"
        Icon="/Assets/avalonia-logo.ico"
        Title="Панель управления">
    <StackPanel>
        <Menu Height="75">
            <MenuItem Header="Устройства" />
            <MenuItem Header="Пользователи"></MenuItem>
            <MenuItem Header="Сертификаты"></MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <views:DevicesList Grid.Row="0" Grid.Column="0" Content="{Binding DevicesList}" />
            <views:DeviceInfo Grid.Row="0" Grid.Column="1" Content="{Binding DeviceInfo}" />
        </Grid>
    </StackPanel>
</Window>
