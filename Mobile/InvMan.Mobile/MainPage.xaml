<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InvMan.Mobile.MainPage">
    <StackLayout>
        <Label Text="Устройства" HorizontalOptions="Center" FontSize="Large"/>
        <ListView x:Name="appliancesList"
            HasUnevenRows="True"
            ItemsSource="{Binding Devices}"
            ItemTapped="OnItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding NetworkName}" FontSize="25"/>
                                <Label Text="{Binding Type}"/>
                                <Label Text="{Binding InventoryNumber}"/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Load devices" Clicked="LoadDevices" />
    </StackLayout>
</ContentPage>
